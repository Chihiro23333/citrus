<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns="http://www.citrusframework.org/schema/kubernetes/testcase"
           targetNamespace="http://www.citrusframework.org/schema/kubernetes/testcase"
           elementFormDefault="qualified"
           attributeFormDefault="unqualified">

  <xs:element name="description" type="xs:string"/>

  <xs:element name="info">
    <xs:annotation>
      <xs:documentation>Executes info command on kubernetes and print result to console</xs:documentation>
    </xs:annotation>
    <xs:complexType>
      <xs:sequence>
        <xs:element ref="description" minOccurs="0"/>
        <xs:element name="expect" type="ExpectCmdResultType" minOccurs="0"/>
      </xs:sequence>
      <xs:attribute name="kubernetes-client" type="xs:string"/>
    </xs:complexType>
  </xs:element>

  <xs:element name="list-pods">
    <xs:annotation>
      <xs:documentation>List kubernetes pods</xs:documentation>
    </xs:annotation>
    <xs:complexType>
      <xs:sequence>
        <xs:element ref="description" minOccurs="0"/>
        <xs:element name="expect" type="ExpectCmdResultType" minOccurs="0"/>
      </xs:sequence>
      <xs:attribute name="kubernetes-client" type="xs:string"/>
      <xs:attribute name="label" type="xs:string"/>
    </xs:complexType>
  </xs:element>

  <xs:element name="list-services">
    <xs:annotation>
      <xs:documentation>List kubernetes service</xs:documentation>
    </xs:annotation>
    <xs:complexType>
      <xs:sequence>
        <xs:element ref="description" minOccurs="0"/>
        <xs:element name="expect" type="ExpectCmdResultType" minOccurs="0"/>
      </xs:sequence>
      <xs:attribute name="kubernetes-client" type="xs:string"/>
      <xs:attribute name="label" type="xs:string"/>
    </xs:complexType>
  </xs:element>

  <xs:element name="list-endpoints">
    <xs:annotation>
      <xs:documentation>List kubernetes endpoints</xs:documentation>
    </xs:annotation>
    <xs:complexType>
      <xs:sequence>
        <xs:element ref="description" minOccurs="0"/>
        <xs:element name="expect" type="ExpectCmdResultType" minOccurs="0"/>
      </xs:sequence>
      <xs:attribute name="kubernetes-client" type="xs:string"/>
      <xs:attribute name="label" type="xs:string"/>
    </xs:complexType>
  </xs:element>

  <xs:element name="list-nodes">
    <xs:annotation>
      <xs:documentation>List kubernetes nodes</xs:documentation>
    </xs:annotation>
    <xs:complexType>
      <xs:sequence>
        <xs:element ref="description" minOccurs="0"/>
        <xs:element name="expect" type="ExpectCmdResultType" minOccurs="0"/>
      </xs:sequence>
      <xs:attribute name="kubernetes-client" type="xs:string"/>
      <xs:attribute name="label" type="xs:string"/>
    </xs:complexType>
  </xs:element>

  <xs:element name="list-namespaces">
    <xs:annotation>
      <xs:documentation>List kubernetes namespaces</xs:documentation>
    </xs:annotation>
    <xs:complexType>
      <xs:sequence>
        <xs:element ref="description" minOccurs="0"/>
        <xs:element name="expect" type="ExpectCmdResultType" minOccurs="0"/>
      </xs:sequence>
      <xs:attribute name="kubernetes-client" type="xs:string"/>
      <xs:attribute name="label" type="xs:string"/>
    </xs:complexType>
  </xs:element>

  <xs:element name="list-events">
    <xs:annotation>
      <xs:documentation>List kubernetes events</xs:documentation>
    </xs:annotation>
    <xs:complexType>
      <xs:sequence>
        <xs:element ref="description" minOccurs="0"/>
        <xs:element name="expect" type="ExpectCmdResultType" minOccurs="0"/>
      </xs:sequence>
      <xs:attribute name="kubernetes-client" type="xs:string"/>
      <xs:attribute name="label" type="xs:string"/>
    </xs:complexType>
  </xs:element>

  <xs:complexType name="ExpectCmdResultType">
    <xs:annotation>
      <xs:documentation>Expects and validates a command result</xs:documentation>
    </xs:annotation>
    <xs:sequence>
      <xs:element name="result" type="xs:string"/>
    </xs:sequence>
  </xs:complexType>
</xs:schema>