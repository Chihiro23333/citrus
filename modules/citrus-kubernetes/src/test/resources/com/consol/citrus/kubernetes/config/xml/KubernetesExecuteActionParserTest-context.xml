<?xml version="1.0" encoding="UTF-8"?>
<spring:beans xmlns="http://www.citrusframework.org/schema/testcase"
              xmlns:spring="http://www.springframework.org/schema/beans" 
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xmlns:kubernetes="http://www.citrusframework.org/schema/kubernetes/testcase"
              xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd 
                                  http://www.citrusframework.org/schema/testcase http://www.citrusframework.org/schema/testcase/citrus-testcase.xsd
                                  http://www.citrusframework.org/schema/kubernetes/testcase http://www.citrusframework.org/schema/kubernetes/testcase/citrus-kubernetes-testcase.xsd">

    <testcase name="KubernetesExecuteActionParserTest">
        <actions>
            <kubernetes:info/>
            <kubernetes:info kubernetes-client="myKubernetesClient"/>

            <kubernetes:list-pods/>
            <kubernetes:list-events/>
            <kubernetes:list-pods label="pod_label"/>
            <kubernetes:list-services label="!pod_label"/>
            <kubernetes:list-nodes label="pod_label=active"/>
            <kubernetes:list-endpoints label="pod_label!=active"/>
            <kubernetes:list-namespaces label="pod_label1!=active,pod_label2=active"/>
        </actions>
    </testcase>
    
    <spring:bean id="myKubernetesClient" class="org.mockito.Mockito" factory-method="mock">
        <spring:constructor-arg value="com.consol.citrus.kubernetes.client.KubernetesClient"/>
    </spring:bean>
    
</spring:beans>